rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Posts are readable by everyone, writable by authenticated users
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Videos are readable by everyone, writable by authenticated users
    match /videos/{videoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Block access to all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

